{{#if addNewBlog}}
  <h1>New VRBlog</h1>
  <div>
  <form>
    <div class="form-group">
      <label for="heading">Heading</label>
      {{input value=heading id="heading"}}
    </div>

    <div class="form-group">
      <label for="sub_heading">Subheading</label>
      {{input value=sub_heading id="sub_heading"}}
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      {{input value=description id="description"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="alt">Image Alt</label>
      {{input value=alt id="alt"}}
    </div>
  </form>
  </div>
{{else}}
  <button type="button" class="btn btn-default btn-lg btn-block new" {{action 'blogFormShow'}}>New VRBlog</button>
{{/if}}
